<Window x:Class="EasySave.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EasySave.ViewModels"
        xmlns:models="clr-namespace:EasySave.Models"
        mc:Ignorable="d"
        Title="EasySave" Height="600" Width="1000" Background="#1E1E1E" MinHeight="450" MinWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" Text="EasySave" FontSize="28" FontWeight="Bold" Foreground="#00A8E8" 
                   HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center"/>

        <Border Grid.Column="0" Grid.Row="1" Background="#252526" Margin="10" Width="180" Padding="10" 
        CornerRadius="15" BorderBrush="#444444" BorderThickness="1">
            <StackPanel HorizontalAlignment="Center">
                <Button x:Name="LanguageButton" Command="{Binding OpenLanguageWindowCommand}" 
                Content="🌍 Language" Style="{StaticResource RoundedButtonStyle}" Margin="5"/>
                <Button x:Name="SettingsButton" Command="{Binding OpenSettingsWindowCommand}" 
                Content="⚙️ Settings" Style="{StaticResource RoundedButtonStyle}" Margin="5"/>
            </StackPanel>
        </Border>


        <Grid Grid.Column="1" Grid.Row="1" Background="#2D2D30" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListView Grid.Row="0" ItemsSource="{Binding Saves}" Margin="10" BorderThickness="0" Background="Transparent">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#444444" BorderThickness="1" CornerRadius="5" Margin="5" Padding="10" Background="#333333">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{Binding Name}" FontWeight="Bold" FontSize="16" Foreground="#FFFFFF"/>
                                <TextBlock Grid.Row="1" Text="{Binding RealDirectoryPath}" FontSize="14" Foreground="#CCCCCC"/>
                                <TextBlock Grid.Row="2" Text="{Binding CopyDirectoryPath}" FontSize="14" Foreground="#CCCCCC"/>
                                <TextBlock Grid.Row="3" Text="{Binding Type}" FontSize="14" Foreground="#CCCCCC"/>

                                <Grid Grid.Row="4" Margin="0,10,0,0">
                                    <ProgressBar Value="{Binding Progress}" Height="20" Foreground="#00A8E8" Background="#444444"/>
                                    <TextBlock Text="{Binding Progress, StringFormat={}{0:F2}%}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="WhiteSmoke"/>
                                </Grid>

                                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                    <Button Command="{Binding DataContext.UpdateSaveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Content="🔁" Style="{StaticResource RoundedButtonStyle}" Margin="5"/>
                                    <Button Command="{Binding DataContext.LoadSaveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Content="⏬" Style="{StaticResource RoundedButtonStyle}" Margin="5"/>
                                    <Button Command="{Binding DataContext.DeleteSaveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Content="❌" Style="{StaticResource DeleteButtonStyle}" Margin="5"/>
                                    <Button Command="{Binding DataContext.PauseSaveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Content="⏯️" Style="{StaticResource RoundedButtonStyle}" Margin="5"/>
                                    <Button Command="{Binding DataContext.StopSaveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Content="⏹️" Style="{StaticResource DeleteButtonStyle}" Margin="5"/>
                                    <Button Command="{Binding DataContext.PlaySaveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Content="⏩" Style="{StaticResource RoundedButtonStyle}" Margin="5"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <!-- NameTextBox -->
                    <ColumnDefinition Width="3*" />
                    <!-- Source -->
                    <ColumnDefinition Width="3*" />
                    <!-- Destination -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Type -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Add Button -->
                </Grid.ColumnDefinitions>

                <!-- Name TextBox -->
                <TextBox x:Name="NameTextBox" Height="30" Text="{Binding SaveName, UpdateSourceTrigger=PropertyChanged}" 
             MinWidth="100" Padding="5" Background="#333333" Foreground="#FFFFFF" 
             BorderBrush="#444444" VerticalAlignment="Center" Grid.Column="0" Margin="5,0,5,0"/>

                <!-- Source Folder Selection -->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SourceTextBox" Height="30" Text="{Binding SaveSource, Mode=OneWay}" 
                        IsReadOnly="True" MinWidth="170" Padding="5" Background="#333333" 
                        Foreground="#FFFFFF" BorderBrush="#444444" VerticalAlignment="Center"
                        Grid.Column="0" Margin="5,0,0,0" Focusable="True">
                        <TextBox.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding OpenSourceFolderCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>

                    <!-- Source Button -->
                    <Button Content="📂" Height="35" Width="45" Command="{Binding OpenSourceFolderCommand}" 
                        Margin="0,0,5,0" VerticalAlignment="Center" 
                        Style="{StaticResource RoundedButtonStyle}" Grid.Column="1"/>
                </Grid>

                <!-- Destination Folder Selection -->
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="DestinationTextBox" Height="30" Text="{Binding SaveDestination, Mode=OneWay}" 
                        IsReadOnly="True" MinWidth="170" Padding="5" Background="#333333" 
                        Foreground="#FFFFFF" BorderBrush="#444444" VerticalAlignment="Center"
                        Grid.Column="0" Margin="5,0,0,0">
                        <TextBox.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding OpenDestinationFolderCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Content="📂" Height="35" Width="45" Command="{Binding OpenDestinationFolderCommand}" 
                        Margin="0,0,5,0" VerticalAlignment="Center" 
                        Style="{StaticResource RoundedButtonStyle}" Grid.Column="1"/>
                </Grid>

                <!-- Save Type ComboBox -->
                <ComboBox x:Name="TypeComboBox" Height="30" ItemsSource="{Binding SaveTypes}"
                    SelectedItem="{Binding MySaveType}" MinWidth="95" 
                    Background="#333333" Foreground="Black" BorderBrush="#444444"
                    VerticalAlignment="Center" Grid.Column="3"/>

                <!-- Add Save Button -->
                <Button x:Name="AddSaveButton" Height="35" Command="{Binding CreateSaveCommand}" 
                    Content="➕" Style="{StaticResource RoundedButtonStyle}" Margin="5" 
                    Grid.Column="4"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
