<Window x:Class="EasySave.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.Views"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="500" Width="1000">

    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid">

        <!-- Language -->
        <TextBlock x:Name="LanguageLabel" HorizontalAlignment="Center" Margin="0,50,390,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="fr-fr" Text="LanguageLabel"/><LineBreak/><Run Language="fr-fr"/></TextBlock>
        <Button x:Name="LanguageButton"
        Content="LanguageButton"
        HorizontalAlignment="Center" 
        Margin="0,71,390,0" 
        VerticalAlignment="Top"
        Command="{Binding OpenLanguageWindowCommand}"/>

        <!-- Log Format -->
        <TextBlock x:Name="LogFormatLabel" HorizontalAlignment="Center" Margin="407,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="fr-fr" Text="LogFormatLabel"/></TextBlock>
        <ComboBox HorizontalAlignment="Center" Margin="390,71,0,0" VerticalAlignment="Top" Width="120"
          ItemsSource="{Binding LogFormats}" 
          SelectedItem="{Binding SelectedLogFormat, Mode=TwoWay}">
        </ComboBox>

        <!-- BanList -->
        <TextBlock x:Name="BanListLabel" HorizontalAlignment="Center" Margin="0,146,631,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="fr-fr" Text="BanListLabel"/></TextBlock>
        <DataGrid ItemsSource="{Binding BannedSoftwares}" AutoGenerateColumns="False"
          HorizontalAlignment="Center" Height="116" Margin="0,167,631,0"
          VerticalAlignment="Top" Width="349"
          IsReadOnly="True" 
          CanUserAddRows="False" 
          CanUserDeleteRows="False"
          CanUserResizeColumns="False"
          CanUserReorderColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="HeaderName" Header="HeaderNameLabel" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn x:Name="HeaderSoftware" Header="HeaderSoftwareLabel" Binding="{Binding Software}" Width="*" />
                <DataGridTemplateColumn x:Name="HeaderActions" Header="HeaderActionsLabel" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="❌" Foreground="Red" Width="50"
                            Command="{Binding DataContext.RemoveBannedSoftwareCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <!-- BanList - AddSoftware -->
        <Button x:Name="AddSoftware" Content="AddSoftwareButton" HorizontalAlignment="Center" Height="30" Margin="0,288,631,0"
        VerticalAlignment="Top" Width="349"
        Click="OpenAddSoftwarePopup"/>

        <!-- ExtensionList -->
        <TextBlock x:Name="ExtensionList" HorizontalAlignment="Center" Margin="0,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="fr-fr" Text="ExtensionListLabel"/></TextBlock>
        <DataGrid ItemsSource="{Binding EncryptExtensions}" AutoGenerateColumns="False"
          HorizontalAlignment="Center" Height="116" Margin="0,167,10,0"
          VerticalAlignment="Top" Width="240"
          IsReadOnly="True" 
          CanUserAddRows="False" 
          CanUserDeleteRows="False"
          CanUserResizeColumns="False"
          CanUserReorderColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="HeaderExtension" Header="HeaderExtensionLabel" Binding="{Binding}" Width="*" />
                <DataGridTemplateColumn x:Name="HeaderActions2" Header="HeaderActionsLabel" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="❌" Foreground="Red" Width="50"
                            Command="{Binding DataContext.RemoveExtensionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <!-- ExtensionList - AddExtension -->
        <Button x:Name="AddExtension" Content="AddExtensionButton" HorizontalAlignment="Center" Height="30" Margin="0,288,10,0"
        VerticalAlignment="Top" Width="240"
        Click="OpenAddExtensionPopup"/>

        <!-- PriorityList -->
        <TextBlock x:Name="PriorityList" HorizontalAlignment="Center" Margin="551,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="fr-fr" Text="PriorityListLabel"/></TextBlock>
        <DataGrid ItemsSource="{Binding PriorisedExtensions}" AutoGenerateColumns="False"
          HorizontalAlignment="Center" Height="116" Margin="558,167,0,0"
          VerticalAlignment="Top" Width="240"
          IsReadOnly="True" 
          CanUserAddRows="False" 
          CanUserDeleteRows="False"
          CanUserResizeColumns="False"
          CanUserReorderColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="HeaderExtension2" Header="HeaderExtension2Label" Binding="{Binding}" Width="*" />
                <DataGridTemplateColumn x:Name="HeaderActions3" Header="HeaderActionsLabel" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="❌" Foreground="Red" Width="50"
                            Command="{Binding DataContext.RemovePriorityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <!-- PriorityList - AddPriority -->
        <Button x:Name="AddPriority" Content="AddPriorityButton" HorizontalAlignment="Center" Height="30" Margin="559,288,0,0"
        VerticalAlignment="Top" Width="240"
        Click="OpenAddPriorityPopup"/>

        <!-- Button Leave -->
        <Button x:Name="BackToMenu"
        Content="BackToMenuButton"
        HorizontalAlignment="Center"
        Margin="0,351,0,0"
        VerticalAlignment="Top"
        Command="{Binding CloseWindowCommand}"/>

        <!-- BanList - Pop up -->
        <Popup x:Name="AddSoftwarePopup" IsOpen="False"
            Placement="Center" StaysOpen="False">
            <Border Width="300" Height="200">
                <StackPanel>
                    <TextBlock x:Name="AddSoftwareExe" Text="AddSoftwareLabel" Margin="10"/>
                    <TextBox Text="{Binding NewSoftwareName, Mode=TwoWay}" Margin="10"/>

                    <Button x:Name="AddBannedSoftware"
                            Content="AddBannedSoftwareButton" Margin="10"
                            Command="{Binding AddBannedSoftwareCommand}"
                            Click="ClosePopup"/>
                    <Button x:Name="CancelBannedSoftware"
                            Content="CancelBannedSoftwareButton" Margin="10"
                            Click="ClosePopup"/>
                </StackPanel>
            </Border>
        </Popup>

        <!-- ExtensionList - Pop up -->
        <Popup x:Name="AddExtensionPopup" IsOpen="False"
            Placement="Center" StaysOpen="False">
            <Border Width="300" Height="200">
                <StackPanel>
                    <TextBlock x:Name="AddExtensionDot" Text="AddExtensionDotLabel" Margin="10"/>
                    <TextBox Text="{Binding NewExtensionName}" Margin="10"/>

                    <Button x:Name="AddExtensionToEncrypt"
                        Content="AddExtensionToEncryptButton" Margin="10"
                        Command="{Binding AddExtensionCommand}"
                        CommandParameter="{Binding NewExtensionName}"
                        Click="ClosePopup"/>

                    <Button x:Name="CancelExtensionToEncrypt"
                        Content="CancelExtensionToEncryptButton" Margin="10"
                        Click="ClosePopup"/>
                </StackPanel>
            </Border>
        </Popup>

        <!-- PriorityList - Pop up -->
        <Popup x:Name="AddPriorityPopup" IsOpen="False"
            Placement="Center" StaysOpen="False">
            <Border Width="300" Height="200">
                <StackPanel>
                    <TextBlock x:Name="AddPriorityDot" Text="AddPriorityDotLabel" Margin="10"/>
                    <TextBox Text="{Binding NewPriorityName}" Margin="10"/>

                    <Button x:Name="AddExtensionPriority"
                        Content="AddExtensionPriorityButton" Margin="10"
                        Command="{Binding AddPriorityCommand}"
                        CommandParameter="{Binding NewPriorityName}"
                        Click="ClosePopup"/>

                    <Button x:Name="CancelExtensionPriority"
                        Content="CancelExtensionPriorityButton" Margin="10"
                        Click="ClosePopup"/>
                </StackPanel>
            </Border>
        </Popup>

    </Grid>
</Window>