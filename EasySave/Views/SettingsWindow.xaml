<Window x:Class="EasySave.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.Views"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid">

        <TextBlock x:Name="LanguageLabel" HorizontalAlignment="Center" Margin="0,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="fr-fr" Text="LanguageLabel"/><LineBreak/><Run Language="fr-fr"/></TextBlock>
        <Button x:Name="LanguageButton"
        Content="LanguageButton"
        HorizontalAlignment="Center" 
        Margin="0,74,0,0" 
        VerticalAlignment="Top"
        Command="{Binding OpenLanguageWindowCommand}"/>

        <TextBlock x:Name="LogFormatLabel" HorizontalAlignment="Center" Margin="0,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="fr-fr" Text="LogFormatLabel"/></TextBlock>
        <ComboBox HorizontalAlignment="Center" Margin="0,157,0,0" VerticalAlignment="Top" Width="120"
          ItemsSource="{Binding LogFormats}" 
          SelectedItem="{Binding SelectedLogFormat, Mode=TwoWay}">
        </ComboBox>

        <TextBlock x:Name="BanListLabel" HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="fr-fr" Text="BanListLabel"/></TextBlock>
        <DataGrid ItemsSource="{Binding BannedSoftwares}" AutoGenerateColumns="False"
          HorizontalAlignment="Center" Height="116" Margin="0,238,0,0"
          VerticalAlignment="Top" Width="368">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding}" Width="*"/>
                <DataGridTemplateColumn Header="Actions" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="❌" Foreground="Red" Width="50"
                            Command="{Binding DataContext.RemoveBannedSoftwareCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="AddSwoftware" Content="AddSwoftwareButton" HorizontalAlignment="Center" Height="30" Margin="0,359,0,0"
        VerticalAlignment="Top" Width="368"
        Click="OpenAddSoftwarePopup"/>

        <Popup x:Name="AddSoftwarePopup" IsOpen="False"
            Placement="Center" StaysOpen="False">
            <Border Width="300" Height="200">
                <StackPanel>
                    <TextBlock Text="Nom du logiciel (.exe)" Margin="10"/>
                    <TextBox Text="{Binding NewSoftwareName, Mode=TwoWay}" Margin="10"/>

                    <Button Content="Ajouter" Margin="10"
                            Command="{Binding AddBannedSoftwareCommand}"
                            Click="ClosePopup"/>
                    <Button Content="Annuler" Margin="10"
                            Click="ClosePopup"/>
                </StackPanel>
            </Border>
        </Popup>

        <Button x:Name="BackToMenu"
        Content="BackToMenuButton"
        HorizontalAlignment="Left"
        Margin="648,364,0,0"
        VerticalAlignment="Top"
        Command="{Binding CloseWindowCommand}"/>
    </Grid>
</Window>